<!-- RENDERS THE ADD BILL FORM -->
<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <div class="form-container">
      <h1>New Bill</h1>
      <%= simple_form_for [ @split, @bill ] do |f|%>
          <%= f.input :title, placeholder: 'FamilyMart', autofocus: true; %>
          <%= f.input :price, placeholder: '2000' %>
          <%= f.input :paid_date %>
        <%= f.submit 'Add Bill', class: 'button button-big form-button' %>
      <%= link_to '', root_path, class: 'ml-2 fas fa-arrow-circle-left'%>
      <% end %>
    </div>
  </div>
</div>
