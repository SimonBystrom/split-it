<!-- wrapper div to contain the carousel and new group button -->
<div class="glide-wrapper">
  <!-- contains the new group button to keep it visible -->
  <div class="carousel-new-group">
    <!--     Links to creating a new group -->
    <% if signed_in? %>
      <%= link_to new_payment_group_path do %>
        <div class='button button-round add-group' id="new_group">
          <i class="fas fa-plus"></i>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- contains the carousel -->
  <div class="glide">
    <div class="glide__track" data-glide-el="track">
      <ul class="glide__slides">
        <% if current_user %>
          <% current_user.payment_groups.each do |payment_group| %>
            <!--   Links to the current paymentgroup when pressing the picture -->
            <%= link_to payment_group_path(payment_group) do %>
              <li class="glide__slide">
                <%= cl_image_tag(payment_group.photo.key, {class: "group-img"}) %>
              </li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
