<!-- Creates the Sidebar. -> Sidebar needs the payment_groups as an argument when used -->


  <div class="sidebar">
   <!--  LOGO -->
   <%= link_to root_path do %>
   <i class="fas fa-surprise" style="font-size: 50px; margin-bottom: 8px; color: white;"></i>
   <% end %>
    <% if current_user %>
      <% current_user.payment_groups.each do |payment_group| %>
        <!--   Links to the current paymentgroup when pressing the picture -->
        <%= link_to payment_group_path(payment_group) do %>
          <div class="sidebar-group">
            <%= cl_image_tag(payment_group.photo.key) %>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <!--     Links to creating a new group -->
    <%= link_to new_payment_group_path do %>
      <div class='button button-round add-group'>
        <i class="fas fa-plus"></i>
      </div>
    <% end %>
    <!--     Links to sign-out -->
    <% if signed_in? %>
     <%= link_to destroy_user_session_path, :method => :delete do %>
      <div class='button button-round add-group'>
        <i class="fas fa-sign-out-alt"></i>
      </div>
    <% end %>
    <% end %>
  </div>
