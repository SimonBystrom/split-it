<ul class="nav tabs-underlined" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="active tab-underlined" id="all-bills-tab" data-toggle="tab" href="#all-bills" role="tab" aria-controls="all-bills" aria-selected="true">All Bills</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="tab-underlined" id="other-bills-tab" data-toggle="tab" href="#other-bills" role="tab" aria-controls="other-bills" aria-selected="false">Other's Bills</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="tab-underlined" id="my-bills-tab" data-toggle="tab" href="#my-bills" role="tab" aria-controls="my-bills" aria-selected="false">My Bills</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
   <div class="tab-pane fade py-3 show active" id="all-bills" role="tabpanel" aria-labelledby="all-bills-tab">
    <% if @bills.any? %>
      <% @bills.each do |bill| %>
        <%= render 'splits/bills', bill: bill %>
      <% end %>
    <% else %>
      <p><em>No bills yet... </em></p>
    <% end %>
  </div>

  <div class="tab-pane fade py-3" id="other-bills" role="tabpanel" aria-labelledby="other-bills-tab">
    <% if @bills.where.not(user: current_user).any? %>
      <% @bills.where.not(user: current_user).each do |bill| %>
        <%= render 'splits/bills', bill: bill %>
      <% end %>
    <% else %>
      <p><em>No bills yet... </em></p>
    <% end %>
  </div>
  <div class="tab-pane fade py-3" id="my-bills" role="tabpanel" aria-labelledby="my-bills-tab">
    <% if @bills.where(user: current_user).any? %>
      <% @bills.where(user: current_user).each do |bill| %>
        <%= render 'splits/bills', bill: bill %>
      <% end %>
    <% else %>
      <p><em>No bills yet... </em></p>
    <% end %>
  </div>
</div>


