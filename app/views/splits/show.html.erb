<div class="main-wrapper">
  <div class="main-container">
    <h1 class="border-bottom"> <%= @split.name %> </h1>
    <div class="split-show-subtitle">
      <h3> $<%= get_split_total(@split)%> </h3>
      <% if  balance_positive?(@split) %>
        <h3 class="positive-balance" > $<%= @balance %> </h3>
      <% elsif @balance == 0 %>
        <h3 class="neutral-balance">$<%= @balance %> </h3>
      <% else %>
        <h3 class="negative-balance"> $<%= @balance %> </h3>
      <% end %>
    </div>
    <%= render 'splits/tabs', bills: @bills %>
  </div>
  <%= link_to payment_group_path(@split.payment_group), class: 'back-button' do %>
    <i class='fas fa-arrow-circle-left'></i>
  <% end %>
  <%= simple_form_for @split do |f| %>
    <% if @split.active%>
      <%= f.input :active, as: :hidden, input_html: { value: false }%>
      <%= f.button :submit, 'Archive', class: "button archive-button" do %>
        <i class="fas fa-archive"></i>
        <% end %>
    <% else %>
      <%= f.input :active, as: :hidden, input_html: { value: true }%>
      <%= f.button :submit, 'Unarchive', class: "button archive-button" do %>
        <i class="fas fa-archive"></i>
        <% end -%>
    <% end %>
  <% end %>

</div>
